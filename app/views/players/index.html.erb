<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row" style="margin-bottom: 50px;">    
          
      <h1 class="text-center">Jugadores</h1>

  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-8  ">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Dinero</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= player.name %></td>
              <td><%= player.money %></td>              
              <td><%= link_to 'Editar', edit_player_path(player) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Agregar Nuevo Jugador', new_player_path %>
    </div>
  </div>
</div>


